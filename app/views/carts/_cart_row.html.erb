<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
    </div>
    <div class="col-xs-4">
      <%= simple_form_for order_item, remote: true do |f| %>
        <%= f.input :quantity, value: order_item.quantity.to_i %>
        <%= f.hidden_field :product_id, value: product.id %>
        <div class="form-group">
          <%= f.button :submit, value: "Сохранить", class: "btn btn-primary" %>
        </div>
        <div class="form-group">
          <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>