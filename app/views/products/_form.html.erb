<div>
	<div class="form-group">
		<a class="btn btn-default" href="/admin">В админку</a>
		<%= link_to "Список товаров", products_index_adm_path, class: "btn btn-default" %>
	</div>
	<div class="form-cont">
		<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
		  <%= f.input :name %>
		  <%= f.input :category_id, collection: Category.order(:order).all, label_method: :name, value_method: :id %>
		  <%= f.input :description %>
		  <%= f.input :price %>
		  <%= f.input :volume %>
		  <%= f.input :is_main %>
		  <%= f.input :is_delivery %>
		  <%= f.input :is_foodtrack %>
		  <%= render 'edit_productimg', f: f %>
		  <div class="form-actions">
		    <%= button_tag "Сохранить", data: { disable_with: "Идет сохранение.." }, class: "btn btn-primary" %>
		  </div>
		<% end %>
	</div>
</div>