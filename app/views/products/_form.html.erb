<div>
	<div class="form-group">
		<a class="btn btn-default" href="/admin">В админку</a>
		<%= link_to "Список товаров", products_index_adm_path, class: "btn btn-default" %>
	</div>
	<div class="form-cont">
		<%= simple_form_for(@product, html: { class: 'form-horizontal' }) do |f| %>
		  <%= f.input :name %>
		  <%= f.input :description %>
		  <%= f.input :price %>
		  <%= f.input :volume %>
		  <%= f.input :is_delivery %>
		  <%= f.input :is_sibirskaya %>
		  <%= f.input :is_volochaevskaya %>
		  <%= f.input :is_foodtrack %>
		  <div class="form-group">
		    <%= f.button :submit, value: "Сохранить", class: "btn btn-primary" %>
		  </div>
		<% end %>
	</div>
</div>