<h1>Index Delivery</h1>
<% @categories.each do |category| %>
  <% if category.products.count > 0 %>
    <div class="category-title_container hidden-xs">
      <div class="category-title">
      	<h2><%= category.name %></h2>
      </div>
      <div class="category-title_triangle"></div>
    </div>
  <% end %>
  <% category.products.order(:id).each do |product| %>
    <div class="product_row">
      <%= product.name %>
    </div>
  <% end %>
<% end %>