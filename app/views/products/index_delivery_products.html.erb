<%= render 'modal_product_in_cart' %>
<main class="page-content">
	<section class="section-md-top-20 position-r bg-images-5 bg-images-main">
		<div class="shell text-center text-md-left">
			<h3>Доставка - <%= @category.name %></h3>
			<%= render 'layouts/cart_text' %>
			<div class="range">
				<% @products.each_with_index do |prod, index| %>
					<div class="cell-md-3 cell-xs-6 product">
						<%= render "product_row", product: prod, order_item: @order_item %>
					</div>
					<% if (index%3 == 2) %>
						<div class="cell-md-1 display-n"></div>
					<% end %>
				<% end %>
			</div>
		</div>
	</section>
</main>